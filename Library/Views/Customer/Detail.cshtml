@model Customer
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <p>ID: @Model.ID</p>
            <p>Email: @Model.Email</p>
            <p>Address: @Model.Address</p>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </div>
    </div>
</div>

