@model LendBookViewModel
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="col-md-6">
        <div class="m-auto">
            <h3>Lend Book</h3>
            <form asp-action="Lend" method="post">
                <input type="hidden" asp-for="book.ID" />
                <div class="form-group">
                    @*<label asp-for="book.Title" class="control-label"></label>
                        <input asp-for="book.Title" class="form-control" placeholder="Book Name">
                        <span asp-validation-for="book.Title" class="text-danger"></span>*@
                    <h5>@Model.book.Title</h5>
                </div>
                <div class="form-group">
                    <label asp-for="book.Customer"></label>
                    @Html.DropDownListFor(x => x.book.CustID,
                   new SelectList(Model.customers.Select(x => new { Value = x.ID, Text = x.Name }), "Value", "Text"),
                   "Select Customer", htmlAttributes: new { @class = "form-control border-input" })
                    <span asp-validation-for="book.Customer"></span>
                </div>

                <div>
                    <input type="submit" class="btn btn-success" value="Submit">
                </div>
            </form>
        </div>
    </div>
</div>

